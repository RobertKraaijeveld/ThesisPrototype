@model ThesisPrototype.ViewModels.ShipCreateViewModel

<script type="text/javascript">
    $(document).ready(function () {
        $('#createNewShipModal').modal('show');
    });
</script>

<div class="modal" tabindex="-1" role="dialog" id="createNewShipModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create a new ship</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        @using (Html.BeginForm("CreateNewShip", "Dashboard", FormMethod.Post))
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                Name of ship
                                <label asp-for="ShipName" class="control-label"></label>
                                <input asp-for="ShipName" name="ShipName" class="form-control" type="text"/>
                                <span asp-validation-for="ShipName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                Imo number
                                <label asp-for="ImoNumber" class="control-label"></label>
                                <input asp-for="ImoNumber" name="ImoNumber" class="form-control" type="number" />
                                <span asp-validation-for="ImoNumber"  class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                Country name
                                <label asp-for="CountryName" class="control-label"></label>
                                <input asp-for="CountryName" name="CountryName" class="form-control" type="text"/>
                                <span asp-validation-for="CountryName"  class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                Path to image
                                <label asp-for="ImageName" class="control-label"></label>
                                <input asp-for="ImageName" name="ImageName" class="form-control" type="text"/>
                                <span asp-validation-for="ImageName"  class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <button class="btn btn-default">Create</button>
                            </div>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>