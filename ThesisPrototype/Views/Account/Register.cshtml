@model ThesisPrototype.ViewModels.RegisterViewModel 
@{ 
    ViewBag.Title = "Register"; 
}  
<h1>Register</h1> 

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>

    <div>
        Username <br />
        <label asp-for="Username"></label>
        <input asp-for="Username" name="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div>
        Password <br />
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" name="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        Please confirm your password <br />
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <br />

    <div>
        <input type="submit" value="Register" />
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</form>