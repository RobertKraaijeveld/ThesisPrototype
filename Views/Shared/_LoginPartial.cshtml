@using Microsoft.AspNetCore.Identity
@using ThesisPrototype
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if(User.Identity.IsAuthenticated) 
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else 
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" method="get" asp-controller="Account" asp-action="Register">Register</a></li>
        
        @if (@Context.Request.Path.Value.Contains("Login") == false)
        {
            <li><a asp-area="" method="get" asp-controller="Account" asp-action="Login">Log in</a></li>
        }
    </ul>
}